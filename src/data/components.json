v>\n</header>\n\n<script>\n    let menuOpen = false;\n    function toggleMenu() {\n        menuOpen = !menuOpen;\n        const menu = document.querySelector('#menu');\n        if (menuOpen) {\n            menu.classList.remove('hidden');\n            menu.classList.add('block');\n        } else {\n            menu.classList.remove('block');\n            menu.classList.add('hidden');\n        }\n    }\n</script>"
